{
  "helmDefaults": {
    "createNamespace": $CREATE_NS | test("true")
  },
  "releases": [
    {
      "name": "\($RELEASE_NAME)",
      "chart": "../cd/helm/\($CHART_NAME)/",
      "namespace": "\($NAMESPACE)",
      "wait": true,
      "values": [
        "../cd/helm/capif/values.yaml",
        {
          "nginx": {
            "nginx": {
              "env": {
                "capifHostname": "\($HOSTNAME_CAPIF)"
              }
            }
          }
        },
        {
          "env": "\($DEPLOYMENT)"
        }
      ]
    }
  ]
}
